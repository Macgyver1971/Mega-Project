<% layout("/layouts/boilerplate.ejs") %>
<body>
  <h3 class = "new-listing-tag">
    Create a New Listing 
  </h3>
  <form method = "post" action = "/listings" class = "new-form validate-form" id =
  "new-listing-form">
    <div class = "label_input">
      <label for = "title">Title*</label><br>
      <input name = "listing[title]" placeholder="Type a catchy title" type = "text"
       id = "new-listing-title" requiredFill = "true">
    </div>
    <div class = "label_input">
      <label for = "description">Description</label><br>
      <textarea name = "listing[description]" placeholder="*max 150 character" type=
      "text" cols = "30"></textarea>
    </div>
    <div class = "label_input">
      <label for = "image">Image</label><br>
      <input name = "listing[image]" placeholder="Enter the image link" type = "text">
    </div>
    <div class = "price_location">
      
      <div class = "label_input">
        <label for = "price">Price*</label><br>
        <input name = "listing[price]" type = "" requiredFill = "true">
      </div>
      <div class = "label_input">
        <label for = "location">Location*</label><br>
        <input name = "listing[location]" placeholder="Enter your location" type = "text" requiredFill = "true">
      </div>
    
    </div>
    <div class = "label_input">
      <label for = "country">Country*</label><br>
      <input name = "listing[country]" placeholder="Country based on location" type = "text" requiredFill = "true">
    </div>
    <div class = "button-div">
      <button id = "new-add-btn">Create</button>
    </div>
  </form>
  
  <script src = "/js/formValidation.js">
  </script>
</body>
