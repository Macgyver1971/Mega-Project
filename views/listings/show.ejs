<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class = "show-card">
    <div class = "show-card-image">
      <img src = "<%= card.image %>">
    </div>
    <div class = "card-show-info">
      <div class = "card-show-title">
        <h2> <%= card.title %> </h2>
      </div>
      <div class = "card-show-location">
        <%= card.location %>, <%= card.country %>
      </div>
      <div class = "card-show-desc">
        <%= card.description %>
      </div>
      
      <div class = "card-show-price">
        <b>&#2547;<%= card.price.toLocaleString('en-BD') %></b> night
      </div>
      
    </div>
  </div>
  
  <div class = "edit_delete-btn">
    <a href = "/listings/edit/<%= card.id %>" class = "edit-btn">
      Edit
    </a>
    <form method = "post" action = "/listings/<%= card.id %>?_method=DELETE">
      <button class
    = "delete-btn"> Delete </button>
    </form>
  </div>
  <div class = "review-form-container">
    <hr>
    <form class = "reviews-form validate-form" method = "post" action = "/listings/<%= card.id
    %>/reviews">
      <h3>
        Leave a review
      </h3>
      <div class = "reviws-label_input">
        <label for = "rating">
          Rating
        </label>
        <input type = "range" min = "1" max = "5" name = "review[rating]" id =
        "rating">
      </div>
      <div class = "reviws-label_input">
        <label for = "comment">
          Comment
        </label>
        <textarea type = "text" name = "review[comment]" id = "comment"
        requiredFill = "true" cols = "25" rows = "5"></textarea>
      </div>
      <button>
        Submit
      </button>
    </form>
  </div>
  <script src = "/js/formValidation.js">
  </script>
</body>

